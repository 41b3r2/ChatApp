<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chat"
                android:background="@drawable/notification_icon_background"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¬ Let's Chat?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/notification_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New chat request"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Sender Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/sender_info_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sender_profile_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/default_avatar"
                app:civ_border_width="2dp"
                app:civ_border_color="#3498DB" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wants to chat with you!"
                    android:textSize="14sp"
                    android:textColor="#27AE60"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/online_indicator" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_not_interested"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="âŒ Not Interested"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="#E74C3C"
                android:textColor="#E74C3C"
                app:cornerRadius="26dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_interested"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ’š Interested"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="#27AE60"
                app:cornerRadius="26dp"
                app:elevation="4dp" />

        </LinearLayout>

        <!-- Additional Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="You can always change your mind later"
            android:textSize="12sp"
            android:textColor="#95A5A6"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
