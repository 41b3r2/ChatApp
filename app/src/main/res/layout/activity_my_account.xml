<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MyAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_person"
                    app:civ_border_width="4dp"
                    app:civ_border_color="@color/primary_color"
                    android:layout_marginBottom="16dp" />

                <!-- User Name -->
                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- User Email -->
                <TextView
                    android:id="@+id/userEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Edit Profile Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœï¸ Edit Profile"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/accent_color"
                    app:cornerRadius="25dp"
                    android:paddingHorizontal="24dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Account Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Account Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Account Created -->
                <TextView
                    android:id="@+id/accountCreatedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account created: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/ic_calendar" />

                <!-- Total Chats -->
                <TextView
                    android:id="@+id/totalChatsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active conversations: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/ic_chat" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Account Settings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ Account Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Change Password Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/changePasswordButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Change Password"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/primary_color"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Privacy Settings Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/privacySettingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Privacy Settings"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/primary_color"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Notification Settings Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/notificationSettingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”” Notification Settings"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/primary_color"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:textColor="@color/text_primary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Danger Zone Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Danger Zone"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/error_color"
                    android:layout_marginBottom="16dp" />

                <!-- Delete Account Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—‘ï¸ Delete Account"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/error_color"
                    app:strokeWidth="2dp"
                    app:cornerRadius="12dp"
                    android:textColor="@color/error_color"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸšª Logout"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    app:backgroundTint="@color/warning_color"
                    app:cornerRadius="12dp"
                    android:textColor="@android:color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
