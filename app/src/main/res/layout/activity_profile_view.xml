<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/back_button_background"
                android:padding="6dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginEnd="32dp" />

        </LinearLayout>

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center_horizontal">

                <!-- Profile Image with Edit Icon -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/default_avatar"
                        app:civ_border_width="4dp"
                        app:civ_border_color="#3498DB" />

                    <ImageView
                        android:id="@+id/edit_image_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignEnd="@id/profile_image"
                        android:layout_alignBottom="@id/profile_image"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_edit"
                        android:background="@drawable/edit_button_background"
                        android:padding="12dp"
                        android:elevation="8dp" />

                </RelativeLayout>

                <!-- User Name -->
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp" />

                <!-- User Email -->
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@example.com"
                    android:textSize="16sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="8dp" />

                <!-- Online Status -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="32dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/online_indicator"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active now"
                        android:textSize="14sp"
                        android:textColor="#27AE60"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Send Message Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/send_message_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ’¬ Send Message"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#3498DB"
                        app:cornerRadius="28dp"
                        app:elevation="6dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Block User Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/block_user_button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸš« Block User"
                        android:textSize="16sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="#E74C3C"
                        android:textColor="#E74C3C"
                        app:cornerRadius="24dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Profile Stats removed per request: messages, friends and status removed to keep page focused -->

    </LinearLayout>

</ScrollView>
